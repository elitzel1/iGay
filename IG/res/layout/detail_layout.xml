<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_det"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <FrameLayout 
    android:id="@+id/fab__header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

      <ImageView
    android:id="@+id/image_header"
   android:layout_width="match_parent"
        android:layout_height="200dp" 
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:src="@drawable/london" />
 

</FrameLayout>
    
    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fab__header_container"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtNombre"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <fragment 
        android:id="@+id/mapaLugar"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txtDesc"
        class="com.google.android.gms.maps.SupportMapFragment"/>
    
    <TextView
        android:id="@+id/txtDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBottom="@+id/mapaLugar"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtDesc"
        android:layout_toRightOf="@+id/mapaLugar"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/rateLugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/fab__header_container"
        android:layout_alignParentRight="true"
        style="?android:attr/ratingBarStyleSmall"/>

    <ListView
        android:id="@+id/listComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnComment" />

    <Button
        android:id="@+id/btnComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtDir"
        android:layout_alignLeft="@+id/txtDir"
        android:layout_marginLeft="15dp"
        android:text="@string/btn_comment" />
    
</RelativeLayout>